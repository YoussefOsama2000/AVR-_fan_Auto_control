#ifndef DC_MOTOR_H_
#define DC_MOTOR_H_
#include "std_types.h"
/*******************************************************************************
 *                                Definitions                                  *
 *******************************************************************************/
/*define default rotation direction*/
#define Default_Rotation_Direction Clokewise
#define OUT1_PORT_ID PORTB_ID
#define OUT1_PIN_ID PIN0_ID
#define OUT2_PORT_ID PORTB_ID
#define OUT2_PIN_ID PIN1_ID
#define PWM_PORT_ID PORTB_ID
#define PWM_PORT_ID PIN3_ID




















/*available rotation directions*/
#define Clokewise  1
#define AnticlokeWise 2

















